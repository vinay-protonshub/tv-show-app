<table class="table table-striped table-hover table-light">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Channel</th>
      <th scope="col">Seasons</th>
    </tr>
  </thead>
  <tbody>
    <% alphebetize(shows).each do |show| %>
      <tr>
        <th scope="row"><%= link_to show.title, show_path(show) %></th>
        <td><%= show.channel.name %></td>
        <td><%= show.current_season %></td>
        <% unless current_user.is_favorite_show(show) %>
          <td><%= link_to 'Mark as favorite', show_mark_as_favorite_path(show) %></td>
        <% else %>
          <td><%= link_to 'Un mark from favorites', show_unmark_as_favorite_path(show) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
